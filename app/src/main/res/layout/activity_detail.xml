<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.udacity.sandwichclub.DetailActivity"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                >

                <TextView
                    android:id="@+id/also_known_as_label_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:text="@string/detail_also_known_as_label"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/also_known_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/also_known_as_label_tv"
                    android:gravity="center_horizontal"
                    android:textStyle="italic"
                    tools:text="Sandwich placeholder alias"
                    android:paddingBottom="16dp"
                    />


                <TextView
                    android:id="@+id/description_label_tv"
                    android:layout_below="@id/also_known_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_description_label"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_below="@id/description_label_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Sandwich placeholder description"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    />

                <TextView
                    android:id="@+id/place_of_origin_label_tv"
                    android:layout_below="@id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_place_of_origin_label"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/origin_tv"
                    android:layout_below="@id/place_of_origin_label_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Placeholder origin"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    />

                <TextView
                    android:id="@+id/ingredients_label_tv"
                    android:layout_below="@id/origin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_ingredients_label"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/ingredients_tv"
                    android:layout_below="@id/ingredients_label_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Sandwich placeholder ingredients"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>
